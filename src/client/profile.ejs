			<!-- Layout content -->
			<div class="layout-content">
					<!-- Content -->
          <div class="container-fluid flex-grow-1 container-p-y">            
						<div id="messagePanel" class="alert alert-danger alert-dismissible fade show" style="visibility: hidden;">
							<button type="button" class="close" data-dismiss="alert">×</button>					
						</div>

						<% if (user.status === 'Inactive'){ %>								
						<div class="callout callout-info">
								<h5>Account activation required.</h5>
								<p>Please request a staff member to activate your account.</p>							
							</div>
							<br />						
						<% } %>
												
            <div class="card mb-4">
              <h6 class="card-header">
                My Profile
              </h6>
              <div class="card-body">								
                <form>
                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Id:</label>
                    <div class="col-sm-10">                      
                      <input type="text" value="<%= user._id %>" class="form-control" readonly />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Username:</label>
                    <div class="col-sm-10">
                      <input type="text" value="<%= user.username %>" class="form-control" readonly />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Password Hash (SHA256):</label>
                    <div class="col-sm-10">
                      <input type="text" value="<%= user.passwordHash %>" class="form-control" readonly />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Role:</label>
                    <div class="col-sm-10">                      
                      <input type="text" value="<%= user.role %>" class="form-control"
                        style="color: <%= user.roleColor %>; font-weight: bold;" readonly />
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Status:</label>
                    <div class="col-sm-10">
											<% if (user.status === 'Inactive'){ %>								
												<input type="text" value="<%= user.status %>" class="form-control" 
															style="font-weight:bold;" readonly />
											<% } else { %>
												<input type="text" value="<%= user.status %>" class="form-control" 
															style="color: <%= user.statusColor %>;font-weight: bold;" readonly />
											<% } %>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">Register Date:</label>
                    <div class="col-sm-10">
                      <input type="text" value="<%= user.registerDate %>" class="form-control" readonly />
                    </div>
                  </div>

                  <% if (user.lastLoginDate) { %>
                    <div class="form-group row">
                      <label class="col-form-label col-sm-2 text-sm-right">Last Login Date:</label>
                      <div class="col-sm-10">
                        <input type="text" value="<%= user.lastLoginDate %>" class="form-control" readonly />
                      </div>
                    </div>
                  <% } %>

                  <% if (user.lastUpdatedBy) { %>                    
                    <div class="form-group row">
                      <label class="col-form-label col-sm-2 text-sm-right">Last Updated By:</label>
                      <div class="col-sm-10">
                        <input type="text" value="<%= user.lastUpdatedBy %>" class="form-control" readonly />
                      </div>
                    </div>
                  <% } %>

                  <div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right"></label>
                    <div class="col-sm-10">
                      <% if (user.canChangePassword){ %>
                        <a style="border-color:#16bade; color:#16bade" class="btn btn-outline-primary" href="/changepassword" class="btn-link">
													<i class="fa fa-key"></i>&nbsp;Change Password
												</a>
                      <% } %>
                    </div>
                  </div>
                </form>
                
              </div>
            </div>

