                    <div class="col-sm-10">																						
											<% if (user.canEditName) { %>
												<input type="text" id="mapName" name="mapName" value="<%= maze.name %>" maxlength="20" required class="form-control" />
											<% } else { %>
												<input type="text" id="mapName" name="mapName" value="<%= maze.name %>" class="form-control" readonly />
											<% } %>
											<span data-validation-for="mapName" class="field-error"></span>
                    </div>
                  </div>

									<div class="form-group row">
                    <label class="col-form-label col-sm-2 text-sm-right">
											Status:<span class="required">*</span>
										</label>
                    <div class="col-sm-10">
											<% if (user.canEditStatus) { %>
												<select id="status" name="status" class="custom-select">
													<option>-- Select --</option>
													<% for(const status of statuses) { %>
														<option value="<%=status%>" <%if (maze.status === status){%> selected <% } %>>
															<%= status %>
														</option>
													<% } %>
												</select>												
											<% } else { %>
												<select id="status" name="status" class="custom-select" disabled>
													<option>-- Select --</option>
													<% for(const status of statuses) { %>
														<option value="<%=status%>" <%if (maze.status === status){%> selected <% } %>>
