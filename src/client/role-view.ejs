            <div class="card mb-4">
              <h6 class="card-header">
                Role Details
              </h6>
              <div class="card-body">
                <form>
									<div class="form-group row">
										<label class="col-form-label col-sm-3 text-sm-right">Name:</label>
										<div class="col-sm-9">
											<input type="text" value="<%= role.name %>" class="form-control"
														style="color: #<%= role.color %>; font-weight: bold;" readonly />
										</div>
									</div>

									<div class="form-group row">
										<label class="col-form-label col-sm-3 text-sm-right">
											Locked:
										</label>
										<div class="col-sm-9">
											<label class="switcher">
												<input type="checkbox" id="locked" class="switcher-input" <%= role.locked ? "checked" : "" %> disabled />
												<span class="switcher-indicator">
													<span class="switcher-yes"></span>
													<span class="switcher-no"></span>
												</span>
												<span class="switcher-label"></span>
											</label>
										</div>
									</div>

									<div class="form-group row">
										<label class="col-form-label col-sm-3 text-sm-right">
											Color:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="This color will be used for authenticated members in game."></i>
										</label>
										<div class="col-sm-9">											
											<span class="minicolors-swatch minicolors-sprite minicolors-input-swatch" 
													title="<%=role.color%>" style="margin-left:12px;">
												<span class="minicolors-swatch-color" style="background-color:<%=role.color%>"></span>
											</span>
										</div>
									</div>									


									<div class="form-group row">
										<label class="col-form-label col-sm-3 text-sm-right">
											Value:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="The higher the value, the more powerful the role is."></i>
										</label>
										<div class="col-sm-9">
											<input type="text" value="<%= role.value %>" class="form-control" style="width: 200px;" readonly />
										</div>
									</div>
									
															                  
									<br />
                  <div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Warn:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Warns a lower-ranked player by displaying a broadcast message. Select a player and type: '/warn reason'"></i>
										</label>										
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permWarn %>" class="form-control" style="width: 100px;" readonly />
                    </div>

										<label class="col-form-label col-sm-3 text-sm-right">
											Mute:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Mutes a lower-ranked player based on the IP address. Select a player and type: '/mute reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permMute %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

																	
									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Unmute:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Unmutes a player who was muted by the IP address. Select a player and type: '/unmute'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permUnmute %>" class="form-control" style="width: 100px;" readonly />
                    </div>

										<label class="col-form-label col-sm-3 text-sm-right">
											Kill:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Kills a lower-ranked player. Select a player and type: '/kill reason'"></i>
										</label>
                    <div class="col-sm-3">
											<input type="text" value="<%= role.permKill %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

								

									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Kick Dead:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Kicks lower-ranked dead players. Select 'All' and type: '/kickdead reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permKickDead %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											Kick Specs:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Kicks lower-ranked spectators. Select 'All' and type: '/kickspecs reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permKickSpecs %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

								
									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Kick:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Kicks a lower-ranked player from the game. Select a player and type: '/kick reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permKick %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											Broadcast:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Displays a broadcast message. Select 'All' and type: '/bc message'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permBroadcast %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>
								

									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Food:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Enables or disables spawning food. To enable, select 'All' and type: '/food 1' or '/food on'. To disable, type: '/food 0' or '/food off'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permToggleFood %>" class="form-control" style="width: 100px;" readonly />
                    </div>

										<label class="col-form-label col-sm-3 text-sm-right">
											Temp Ban:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Temporarily bans a lower-ranked player based on the IP address. Select a player and type: '/tempban reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permTempBan %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

								
									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											ASN Ban:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Temporarily bans a lower-ranked player based on the ASN (Autonomous System Number). Multiple IP addresses will be affected, use as a last resort. Select a player and type: '/asnban reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permASNBan %>" class="form-control" style="width: 100px;" readonly />
                    </div>

										<label class="col-form-label col-sm-3 text-sm-right">
											Clear Ban List (Unban All):
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="The command will be renamed to '/unbanall' in the future. Unbans all players who were banned by IP address and ASN. Select 'All' and type: '/clearbanlist'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permClearBanList %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>
																	
									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											ASN Mute:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Temporarily mutes a lower-ranked player based on the ASN (Autonomous System Number). Multiple IP addresses will be affected, use as a last resort. Select a player and type: '/asnmute reason'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permASNMute %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											ASN Unmute:
											<i class="fas fa-question-circle" data-toggle="tooltip" data-state="primary"
												data-original-title="Unmutes a player who was muted by 'ASN Mute' previously. Select a player and type: '/asnunmute'"></i>
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permASNUnmute %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>



									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											ASN Add:											
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permASNAdd %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											Restart Server:											
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permRestartServer %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>


									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											VPN Command:
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permVPNCommand %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											Map Command:
										</label>
                    <div class="col-sm-3">                      
											<input type="text" value="<%= role.permMapCommand %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>
									<br />

									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Max Member Status Update:
										</label>										
                    <div class="col-sm-3">											
											<input type="text" value="<%= role.maxMemberStatusUpdate %>" class="form-control" style="width: 100px;" readonly />
                    </div>

										<label class="col-form-label col-sm-3 text-sm-right">
											Max Member Username Update:
										</label>
                    <div class="col-sm-3">											
											<input type="text" value="<%= role.maxMemberUsernameUpdate %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

									<div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right">
											Max Member Password Hash Update:
										</label>										
                    <div class="col-sm-3">										
											<input type="text" value="<%= role.maxMemberPasswordHashUpdate %>" class="form-control" style="width: 100px;" readonly />
                    </div>


										<label class="col-form-label col-sm-3 text-sm-right">
											Max Member Role Update:
										</label>
                    <div class="col-sm-3">											
											<input type="text" value="<%= role.maxMemberRoleUpdate %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>

									<div class="form-group row">                    										
										<label class="col-form-label col-sm-3 text-sm-right">
											Max Member Delete:
										</label>										
                    <div class="col-sm-3">											
											<input type="text" value="<%= role.maxMemberDelete %>" class="form-control" style="width: 100px;" readonly />
                    </div>
                  </div>
									<br />

								                 
									<% if (role.lastUpdatedByUsername) { %>                    
                    <div class="form-group row">
                      <label class="col-form-label col-sm-3 text-sm-right">Last Updated By:</label>
                      <div class="col-sm-9">                        
												<a href="/member/view/<%= role.lastUpdatedBy %>" target="_blank" class="form-control text-info">
													<%= role.lastUpdatedByUsername %>
												</a>
                      </div>
                    </div>
                  <% } %>


									<% if (role.lastUpdatedDate) { %>
										<div class="form-group row">
											<label class="col-form-label col-sm-3 text-sm-right">Last Updated Date:</label>
											<div class="col-sm-9">                      
												<input type="text" value="<%= role.lastUpdatedDate %>" class="form-control" readonly />
											</div>
										</div>
									<% } %>
								   
								
                  <div class="form-group row">
                    <label class="col-form-label col-sm-3 text-sm-right"></label>
                    <div class="col-sm-9">
                      <% if (user.canEditRole){ %>
												<a style="border-color:#16bade; color:#16bade"class="btn btn-outline-primary" href="/role/edit/<%= role._id %>">
													<i class="fas fa-pen"></i>&nbsp;Edit													
												</a>
											<% } %>		
											
											<% if (user.canDeleteRole){ %>
												&nbsp;
												<a class="btn btn-outline-danger" href="/role/delete/<%= role._id %>">
													<i class="fas fa-trash"></i>&nbsp;Delete
												</a>
											<% } %>											
                    </div>
                  </div>

                </form>

              </div>
            </div>

          </div>
          <!-- / Content -->

				<!-- Layout footer -->
				<nav class="layout-footer footer bg-footer-theme">
					<div class="container-fluid d-flex flex-wrap justify-content-between text-center container-p-x pb-3">
						<div class="pt-3">
							<span class="footer-text font-weight-bolder">Arras.io</span> ©
						</div>              
					</div>
				</nav>
				<!-- / Layout footer -->
			</div>
